########################
# ultimate sway config #
########################
# read `man 5 sway` for a complete reference.

### includes

# include colours generated by pywal
include "$HOME/.cache/wal/colors-sway"

### variables

# logo key
set $mod Mod4

# home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# terminal
set $term alacritty

# application launcher
for_window [app_id="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 5

set $menu exec $term --class=launcher -e $HOME/dev/sway-launcher-desktop/sway-launcher-desktop.sh

# steam always floating
for_window [class="Steam"] floating enable

### startup exec

## dbus user bus (forget dbus-run-session)
exec dbus-daemon --session --address=unix:path=$XDG_RUNTIME_DIR/bus

## clipman (used to share clipboard after window closed)
exec wl-paste -t text --watch clipman store --no-persist

## pipewire
exec --no-startup-id pipewire & pipewire-pulse &

## hacker cursor
# need to set for gtk / qt too
# seat seat0 xcursor_theme Breeze_Hacked 24

## sworkstyle
exec sworkstyle &> /tmp/sworkstyle.log

## dunst (notifications)
exec dunst

## udiskie (hotplug mounting)
exec udiskie

## update gamma settings etc.
# todo: make this a separate config file optional for different machines
# exec wl-gammactl -c 1.085 -b 1.000 -g 0.800

exec spotifyd --no-daemon

### output configuration

## wallpaper
output * bg $wallpaper fill

## refresh rate / adaptive sync
output DP-1 {
	scale 1
	pos 0 0
	res 2560x1440@143.856Hz
	adaptive_sync off
	subpixel none
}

# todo: scale with big res
output HDMI-A-1 {
	# scale 1.5
}

### idle configuration

## turn off the screen after 5 mins idle
exec swayidle -w \
	timeout 300 'swaymsg "output * dpms off"' \
	resume 'swaymsg "output * dpms on"'

## todo: sleep the machine after 10 mins

### input configuration

## disable mouse acceleration
# todo: middle button
input type:pointer {
	pointer_accel -1
}

# remap caps to escape
input type:keyboard {
    # xkb_options caps:swapescape
    xkb_options caps:escape
}

### customisation

## gaps
gaps inner 10

## borders
default_border none
default_floating_border pixel 2

# no title bars allowed
font pango:monospace 0
titlebar_border_thickness 0
titlebar_padding 0

### colours

set $error		$color2
set $inactive	$color0
set $text		$color8

# class					border		backgr. 	text		indic.		child_border
client.focused			$color0		$color4		$foreground $color7 	$background
client.unfocused		$background	$inactive	$text		$background	$background
client.focused_inactive	$error		$background	$text		$background	$background
client.urgent			$error		$error		$text		$error		$error
client.placeholder		$background	$background	$text		$background	$background
client.background		$background

### key bindings

# test kitty
bindsym $mod+t exec kitty

# start a terminal
# bindsym $mod+Return exec $term>~/term.log

# kill focused window
bindsym $mod+q kill

# start your launcher
bindsym $mod+space $menu

# swap workspaces back & forth
bindsym $mod+tab workspace back_and_forth

# drag windows by holding down $mod and left mouse button
# resize them with right mouse button + $mod
floating_modifier $mod normal

# reload the configuration file
bindsym $mod+Shift+c reload

# show logout menu
# bindsym $mod+Shift+e exec wlogout &
# todo: permissions
bindsym $mod+Shift+e exec wlogout -p xdg &

# take a screenshot
bindsym $mod+Shift+s exec grimshot save area

## moving around:

# move focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up bindsym $mod+Shift+$right move right

# ditto, with arrow keys (cringe)
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## workspaces:

# switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
# note: workspaces can have any name, not just numbers.

## layout

# can "split" the current object of focus with
# $mod+b or $mod+v, for horizontal and vertical splits
bindsym $mod+b splith
bindsym $mod+v splitv

# switch current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# make the current focus fullscreen
bindsym $mod+f fullscreen

# toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# bindsym $mod+space focus mode_toggle

# move focus to the parent container
bindsym $mod+a focus parent

## scratchpad

# sway has a "scratchpad",
# which is a bag of holding for windows.
bindsym $mod+Shift+minus move scratchpad

# show the next scratchpad window
# or hide the focused scratchpad window.
# if there are multiple scratchpad windows,
# this command cycles through them.
bindsym $mod+minus scratchpad show

## resizing containers

mode "resize" {
	# hjkl resize bigger / smaller each way
    bindsym $left resize shrink width 40px
    bindsym $down resize grow height 40px
    bindsym $up resize shrink height 40px
    bindsym $right resize grow width 40px

    # arrow keys for smaller movements
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# laptop brightness
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

# laptop volume / mute
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# todo: media keys
# bindsym XF86TouchpadTogglTouchpadToggle

### status Bar
bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
